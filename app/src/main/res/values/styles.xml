<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomStyle">

    </style>

    <style name="LargeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/press_start2p_regular</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">37sp</item>
    </style>

    <style name="ButterflyImage">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:rotation">-45</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/butterfly</item>
    </style>

    <style name="InfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">18</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:singleLine">false</item>
        <item name="android:fontFamily">@font/press_start2p_regular</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_back</item>
        <item name="android:fontFamily">@font/press_start2p_regular</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomButton" parent="Button">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="MenuButton" parent="Button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:text">@string/menu</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:background">@drawable/edit</item>
        <item name="android:fontFamily">@font/press_start2p_regular</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="QuestionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/custom_back</item>
        <item name="android:fontFamily">@font/press_start2p_regular</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PersonImageButton">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/custom_back</item>
        <item name="android:padding">16dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PersonImageButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/press_start2p_regular</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
