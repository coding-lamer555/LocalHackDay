<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/press_start2p_regular</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="WelcomeTextView" parent="CustomStyle">
        <item name="android:textSize">37sp</item>
    </style>

    <style name="InfoTextView" parent="CustomStyle">
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="CustomTextStyle" parent="InfoTextView">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/custom_back</item>
        <item name="android:textColor">@color/colorBack</item>
    </style>

    <style name="CustomButtonStyle" parent="CustomStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/custom_back</item>
        <item name="android:textColor">@color/colorBack</item>
    </style>

    <style name="ContentStyle">
        <item name="android:background">@drawable/custom_back</item>
        <item name="android:fontFamily">@font/press_start2p_regular</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
