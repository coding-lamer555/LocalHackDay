<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shop"
    tools:context=".ShopActivity">

    <Button
        android:id="@+id/menu"
        style="@style/MenuButton"
        android:onClick="onMenuClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.localhackday.utils.AnimatedTextView
        android:id="@+id/question"
        style="@style/QuestionText"
        android:text="@string/shop_question"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu" />

    <Button
        android:id="@+id/answerA"
        style="@style/BottomButton"
        android:onClick="onAnswerAClick"
        android:text="@string/shop_answerA"
        app:layout_constraintBottom_toTopOf="@id/answerB"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/answerB"
        style="@style/BottomButton"
        android:onClick="onAnswerBClick"
        android:text="@string/shop_answerB"
        app:layout_constraintBottom_toTopOf="@id/answerC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/answerC"
        style="@style/BottomButton"
        android:onClick="onAnswerCClick"
        android:text="@string/shop_answerC"
        app:layout_constraintBottom_toTopOf="@id/answerD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/answerD"
        style="@style/BottomButton"
        android:onClick="onAnswerDClick"
        android:text="@string/shop_answerD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>