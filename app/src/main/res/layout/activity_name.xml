<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    tools:context=".NameActivity">

    <ImageView
        android:id="@+id/butterfly"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:adjustViewBounds="true"
        android:rotation="-45"
        android:scaleType="fitCenter"
        android:src="@drawable/butterfly"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.localhackday.utils.AnimatedTextView
        android:id="@+id/nameTitle"
        style="@style/WelcomeTextView"
        android:layout_marginTop="16dp"
        android:text="@string/meet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/butterfly" />

    <EditText
        android:id="@+id/name"
        style="@style/WelcomeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        app:layout_constraintBottom_toTopOf="@id/next"
        app:layout_constraintTop_toBottomOf="@id/nameTitle" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/custom_back"
        android:fontFamily="@font/press_start2p_regular"
        android:onClick="onNextClick"
        android:padding="8dp"
        android:text="@string/next"
        android:textColor="@color/colorBack"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>